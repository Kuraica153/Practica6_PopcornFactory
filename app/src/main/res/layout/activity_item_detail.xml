<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostblack"
    tools:context=".ItemDetail"
>
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent" 
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/headerbighero6"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mustard"
                android:text="Big Heroes 6"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
        />
        <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/mustard"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="33dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/babygray"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"
        android:text=""
    />
    <Button
        android:id="@+id/btnBuyTicket"
        android:text="Buy my ticket!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:paddingHorizontal="@dimen/paddingButton"
        android:layout_marginTop="10dp"
    />
    <TextView
        android:id="@+id/seatsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/babygray"
        android:textStyle="italic"
        android:layout_marginTop="7dp"
    />


</LinearLayout>