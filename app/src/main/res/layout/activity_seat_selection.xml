        android:layout_marginHorizontal="50dp"
        android:text="Screen"
        android:textSize="23sp"
        android:textStyle="italic"
    />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
    >
        <ImageView
            android:layout_width="@dimen/availabilityIcons"
            android:layout_height="@dimen/availabilityIcons"
            android:layout_gravity="center_vertical"
            android:src="@drawable/radio_normal"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/babygray"
            android:layout_marginLeft="5dp"
        />
        <ImageView
                android:layout_width="@dimen/availabilityIcons"
                android:layout_height="@dimen/availabilityIcons"
                android:layout_gravity="center_vertical"
                android:src="@drawable/radio_disabled"
                android:layout_marginLeft="10dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not \nAvailable"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/babygray"
                android:layout_marginLeft="5dp"
        />
        <ImageView
                android:layout_width="@dimen/availabilityIcons"
                android:layout_height="@dimen/availabilityIcons"
                android:layout_gravity="center_vertical"
                android:src="@drawable/radio_selected"
                android:layout_marginLeft="10dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your \nSelection"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/babygray"
                android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"
        android:textColor="@color/almostblack"
        android:text="Confirm"
        android:paddingHorizontal="70dp"
        android:layout_marginTop="20dp"
    />

